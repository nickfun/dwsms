{
    # General Settings
    "appName": "dwsms",
    "dateFormatPattern": "YYYY-MM-dd HH:mm:ss",
    "fromPhoneNumber": "+15105557777",
    "frequency": 60,
    # Twilio settings
    "twilioApiAccount": "ACCOUNT_SID_HERE",
    "twilioApiToken": "ACCOUNT_TOKEN_HERE",
    # Dropwizard Settings
    "server": {
        "type": "default",
        "gzip": {
            "enabled": true
        },
        "applicationConnectors": [
            {
                "type": "http",
                "port": 8080
            }
        ],
        "adminConnectors": [
            {
                "type": "http",
                "port": 8081
            }
        ]
    },
    
    "logging": {
        "level": "INFO",
        "loggers": {
            "gs.nick": "TRACE"
        },
        "appenders": [
            {
                "type": "file",
                "currentLogFilename": "./logs/current.log",
                "threshold": "INFO",
                "archive": true,
                "archivedLogFilenamePattern": "./log/archive-%d.log",
                "archivedFileCount": 14
            },
            {
                "type": "console",
                "threshold": "DEBUG"
            }
        ]
    }
}
