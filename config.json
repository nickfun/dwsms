{
    "server": {
        "type": "default",
        "gzip": {
            "enabled": true
        },
        "applicationConnectors": [
            {
                "type": "http",
                "port": 8080
            }
        ],
        "adminConnectors": [
            {
                "type": "http",
                "port": 8081
            }
        ]
    },
    
    "appName": "dwsms",
    
    "logging": {
        "level": "TRACE",
        "loggers": {
            "io.dropwizard": "INFO",
            "gs.nick": "TRACE",
            "org.eclipse": "ERROR",
            "javax.management": "ERROR",
            "com.sun.jersey": "ERROR"
        },
        "appenders": [
            {
                "type": "file",
                "currentLogFilename": "./logs/current.log",
                "threshold": "INFO",
                "archive": true,
                "archivedLogFilenamePattern": "./log/archive-%d.log",
                "archivedFileCount": 14
            },
            {
                "type": "console",
                "threshold": "DEBUG"
            }
        ]
    }
}
