{
    # General Settings
    "appName": "dwsms",
    "dateFormatPattern": "YYYY-MM-dd HH:mm:ss",
    "fromPhoneNumber": "+15105557777",
    "frequency": 60,
    # Twilio settings
    "twilioApiAccount": "ACCOUNT_SID_HERE",
    "twilioApiToken": "ACCOUNT_TOKEN_HERE",
    # Dropwizard Settings
    "server": {
        "type": "default",
        "gzip": {
            "enabled": true
        },
        "applicationConnectors": [
            {
                "type": "http",
                "port": 8080
            }
        ],
        "adminConnectors": [
            {
                "type": "http",
                "port": 8081
            }
        ],
        "requestLog": {
            "appenders": [
                {
                    "type": "file",
                    "currentLogFilename": "./logs/requests.log",
                    "archive": true,
                    "archivedLogFilenamePattern": "./log/archive-%d.log",
                    "archivedFileCount": 14
                }
            ]
        }
    },
    
    "logging": {
        "level": "TRACE",
        "loggers": {
            "io.dropwizard": "INFO",
            "gs.nick": "TRACE",
            "org.eclipse": "ERROR",
            "javax.management": "ERROR",
            "com.sun.jersey": "ERROR"
        },
        "appenders": [
            {
                "type": "file",
                "currentLogFilename": "./logs/current.log",
                "threshold": "INFO",
                "archive": true,
                "archivedLogFilenamePattern": "./log/archive-%d.log",
                "archivedFileCount": 14
            },
            {
                "type": "console",
                "threshold": "DEBUG"
            }
        ]
    }
}
